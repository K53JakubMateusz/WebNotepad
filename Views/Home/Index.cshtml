@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome to Web Notepad</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .container {
            max-width: 600px;
            margin: 100px auto;
            text-align: center;
        }

        .logo {
            font-size: 48px;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 28px;
            margin-bottom: 30px;
        }

        p {
            font-size: 18px;
            margin-bottom: 40px;
        }

        .btn-primary {
            font-size: 18px;
            padding: 12px 30px;
        }

        .btn-secondary {
            font-size: 18px;
            padding: 12px 30px;
            margin-top: 10px;
        }

        .footer {
            margin-top: 60px;
        }

            .footer p {
                font-size: 14px;
                color: #888;
            }
    </style>
</head>
<body>
    <div class="container">
        <span class="logo">Web Notepad</span>
        <h1>Welcome!</h1>
        <p>Take notes, stay organized, and access your notes from anywhere.</p>
        <p>With Web Notepad, you can:</p>
        <ul class="text-left">
            <li>Create and manage multiple notes effortlessly</li>
            <li>Access your notes from any device with an internet connection</li>
            <li>Enjoy a distraction-free writing experience</li>
        </ul>
    </div>
</body>
</html>